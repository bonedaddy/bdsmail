#
# exmaple muttrc config that works with bdsmail
#

# set our mbox type to use maildir
set mbox_type=Maildir

# set smtp to use bdsmail default smtp server
set smtp_url=smtp://127.0.0.1:2525/

# use from header for sending mail
set use_from=yes

# set from address
set from=admin@putyourb32addresshere.b32.i2p

# set mailbox for admin, replace "/path/to/bdsmail/" with path to bdsmail repo
set spoolfile=/path/to/bdsmail/mail/admin
